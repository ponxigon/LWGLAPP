<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/tv_worker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二妮"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true">
        <RelativeLayout
            android:id="@+id/re_1"
            android:layout_width="wrap_content"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/qingjiaqian"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="请假日期："
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/riqi_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2022.12.20"
                android:layout_toRightOf="@id/qingjiaqian"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/re_1">
            <TextView
                android:id="@+id/qingjiahou"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="返岗日期："

                />

            <TextView
                android:id="@+id/riqi_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2022.12.25"
                android:layout_toRightOf="@id/qingjiahou"

                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>