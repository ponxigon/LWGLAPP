<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_main"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/advertising"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/image_main"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <RelativeLayout
                android:id="@+id/service_inquire_company"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/mg_01"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/service_btn_img1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/manage_home_01" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="企业查询"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/mg_01"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/service_letter_box"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/mg_02"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/service_btn_img2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/manage_home_02" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投诉接收箱"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/mg_02"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/service_information"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/mg_03"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/service_btn_img3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/worker_home_03" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户信息"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/mg_03"
                    />
            </RelativeLayout>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:layout_weight="1"
                />        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:layout_weight="1"
                />
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:layout_weight="1"
                />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:layout_weight="1"
                />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:layout_weight="1"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>