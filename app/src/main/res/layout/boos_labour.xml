<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_worker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="大苏打"
            android:textSize="22sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">


            <Button
                android:id="@+id/labour_true"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="同意"
                android:textSize="15sp"
                android:background="@drawable/btn_selector_03"
                />
            <Button
                android:id="@+id/labour_false"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="拒绝"
                android:textSize="15sp"
                android:background="@drawable/btn_selector_04"
                android:layout_toRightOf="@id/labour_true"/>

        </RelativeLayout>




    </RelativeLayout>


</LinearLayout>